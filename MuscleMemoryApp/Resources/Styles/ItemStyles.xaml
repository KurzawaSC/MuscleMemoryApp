<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <DataTemplate x:Key="ExerciseStyle">
        <Frame BackgroundColor="#F5F5F5">
            <Grid RowDefinitions="*,*" ColumnDefinitions=".4*, .4*, .1*, .1*">
                <VerticalStackLayout HorizontalOptions="End"
                VerticalOptions="Center" Margin="0,0,15,0">
                    <Label Text="{Binding Name}" FontSize="20" FontFamily="CommonFont"/>
                    <Label Text="{Binding Record, StringFormat='Record: {0}'}" FontFamily="CommonFont" Grid.Row="1" FontSize="15"/>
                </VerticalStackLayout>
                <Frame Grid.Column="1" Grid.RowSpan="2" Style="{StaticResource ExerciseImageFrame}">
                    <Image Source="{Binding Image}" Style="{StaticResource ExerciseImage}"/>
                </Frame>
                <Button Grid.Column="2" Grid.RowSpan="2" Background="Red" ImageSource="trash.png"
                        MaximumHeightRequest="50" MaximumWidthRequest="50"
                        CommandParameter="{Binding Id}"/>
            </Grid>
        </Frame>
    </DataTemplate>

</ResourceDictionary>