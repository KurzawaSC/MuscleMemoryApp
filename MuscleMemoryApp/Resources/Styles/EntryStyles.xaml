<?xml version="1.0" encoding="utf-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style TargetType="Frame" x:Key="EntryFrame">
        <Setter Property="BorderColor" Value="Black"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Margin" Value="25,10,25,10"/>
    </Style>

    <Style TargetType="Entry" x:Key="CommonEntry">
        <Setter Property="FontFamily" Value="LightFont"/>
        <Setter Property="Opacity" Value="0.5"/>
    </Style>

    <Style TargetType="DatePicker" x:Key="PickerStyle">
        <Setter Property="FontFamily" Value="CommonFont"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="TextColor" Value="Black"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="HorizontalOptions" Value="Center"/>
        <Setter Property="VerticalOptions" Value="Center"/>
    </Style>

</ResourceDictionary>